<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bobatea.momandpops.frontend.controllers.HomeController">

    <!-- Header Section -->
    <HBox style="-fx-padding: 6 0 6 8;">
        <MenuButton fx:id="navigationMenu" translateY="5"
                    style="-fx-background-color: transparent;
                           -fx-border-color: transparent;">
            <graphic>
                <ImageView fitHeight="30" preserveRatio="true">
                    <Image url="@../icons/menulist.png"/>
                </ImageView>
            </graphic>
            <styleClass>
                <String fx:value="navigation-menu"/>
            </styleClass>
        </MenuButton>

        <ImageView fitHeight="50" preserveRatio="true" fx:id="logoImage">
            <Image url="@../images/logo.png"/>
        </ImageView>

        <Region HBox.hgrow="ALWAYS"/>

        <MenuButton fx:id="profileMenu" translateY="5"
                    style="-fx-background-color: transparent;
                           -fx-border-color: transparent;">
            <graphic>
                <ImageView fitHeight="30" preserveRatio="true">
                    <Image url="@../icons/profile.png"/>
                </ImageView>
            </graphic>
            <styleClass>
                <String fx:value="navigation-menu"/>
            </styleClass>
        </MenuButton>
    </HBox>

    <!-- Content Area -->
    <VBox style="-fx-background-color: #d4c5a9;" VBox.vgrow="ALWAYS">

        <!-- Operating Hours -->
        <HBox alignment="CENTER" style="-fx-padding: 15;">
            <Label text="Operating Hours: Monday - Thurs. (9 am - 11 pm) Friday - Sat. (11 am - 12 am)"
                   style="-fx-font-size: 16px"/>
        </HBox>
        <!-- Promotional Image -->
        <HBox alignment="CENTER" style="-fx-padding: 5;">
            <ImageView fitHeight="260" preserveRatio="true">
                <Image url="@../images/banner.png"/>
            </ImageView>
        </HBox>
        <!-- Who We Are Section -->
        <HBox alignment="CENTER" spacing="30" style="-fx-padding: 10 20;">
            <ImageView fitHeight="250" preserveRatio="true">
                <Image url="@../images/pop.png"/>
            </ImageView>
            <VBox alignment="CENTER" spacing="15" maxWidth="450"
                  style="-fx-background-color: transparent; -fx-padding: 30;">

                <Label text="WHO WE ARE:"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-letter-spacing: 3px;"/>

                <Label text="Mom and Pop's was started in 2025 by Bob Jones and Macy Williams as a small family business, and has expanded to multiple communities across Georgia. We make wood-fired pizzas that can brighten any day. Come visit us at:"
                       wrapText="true" textAlignment="CENTER"
                       style="-fx-font-size: 13px; -fx-line-spacing: 0.5em;"/>

                <Button text="680 Arntson Rd, suite 161&#10;Marietta, GA 30060"
                        textAlignment="CENTER"
                        fx:id="locationButton"
                        style="-fx-background-color: #C85050; -fx-text-fill: black;
                       -fx-font-size: 13px; -fx-padding: 12 30;
                       -fx-background-radius: 35; -fx-cursor: hand;"/>

                <Label text="(770)-555-1212"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            </VBox>
            <ImageView fitHeight="250" preserveRatio="true">
                <Image url="@../images/mom.png"/>
            </ImageView>

        </HBox>

    </VBox>

</VBox>