<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bobatea.momandpops.frontend.controllers.ItemPopupController"
            prefWidth="400" prefHeight="600">

    <top>
        <HBox style="-fx-padding: 15; -fx-background-color: white;">
            <Label fx:id="itemNameLabel"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-padding: 10 20;"
                    translateX="210"
                    alignment="TOP_RIGHT"/>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
            <VBox fx:id="optionsContainer" spacing="15" style="-fx-padding: 15;">

                <!-- Crust Section -->
                <VBox fx:id="crustSection" spacing="5">
                    <Label text="Select Crust Style:" style="-fx-font-weight: bold;"/>
                    <VBox fx:id="crustContainer" spacing="5"/>
                </VBox>

                <!-- Size Section -->
                <VBox fx:id="sizeSection" spacing="5">
                    <Label text="Select Size:" style="-fx-font-weight: bold;"/>
                    <VBox fx:id="sizeContainer" spacing="5"/>
                </VBox>

                <!-- Color Section -->
                <VBox fx:id="colorSection" spacing="5">
                    <Label text="Select Color:" style="-fx-font-weight: bold;"/>
                    <VBox fx:id="colorContainer" spacing="5"/>
                </VBox>

                <!-- Toppings Section -->
                <VBox fx:id="toppingsSection" spacing="5">
                    <Label text="Extras/Toppings:" style="-fx-font-weight: bold;"/>
                    <VBox fx:id="toppingsContainer" spacing="5"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f5f5f5;">
            <!-- Quantity -->
            <VBox fx:id="errorContainer" spacing="10" alignment="CENTER">
            </VBox>

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Quantity:"/>
                <Button text="-" onAction="#decreaseQuantity"
                        style="-fx-font-size: 16px; -fx-padding: 5 15;"/>
                <TextField fx:id="quantityField" text="1" prefWidth="60"
                           alignment="CENTER" editable="false"
                           style="-fx-font-size: 14px;"/>
                <Button text="+" onAction="#increaseQuantity"
                        style="-fx-font-size: 16px; -fx-padding: 5 15;"/>
                <Button text="Add to Cart" onAction="#handleAddToCart"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
